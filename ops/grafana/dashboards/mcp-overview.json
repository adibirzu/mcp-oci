{
  "dashboard": {
    "id": null,
    "uid": "mcp-overview",
    "title": "MCP Overview",
    "tags": ["mcp", "observability"],
    "timezone": "browser",
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "HTTP Requests per Second",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total[5m]))",
            "legendFormat": "RPS",
            "datasource": {
              "type": "prometheus",
              "uid": "prom"
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "MCP Tool Calls",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (server, tool) (rate(mcp_tool_calls_total[5m]))",
            "legendFormat": "{{server}}/{{tool}}",
            "datasource": {
              "type": "prometheus",
              "uid": "prom"
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Tool Duration Distribution",
        "type": "heatmap",
        "targets": [
          {
            "expr": "sum by (le) (rate(mcp_tool_duration_seconds_bucket[5m]))",
            "format": "heatmap",
            "legendFormat": "{{le}}",
            "datasource": {
              "type": "prometheus",
              "uid": "prom"
            }
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 24,
          "x": 0,
          "y": 8
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {},
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "schemaVersion": 30,
    "version": 1
  }
}