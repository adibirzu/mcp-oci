{
  "dashboard": {
    "id": null,
    "title": "MCP Observability Dashboard",
    "description": "Comprehensive observability dashboard for MCP servers",
    "tags": ["mcp", "observability", "metrics", "traces"],
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "MCP Tool Calls Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum by (server, tool) (rate(mcp_tool_calls_total[5m]))",
            "legendFormat": "{{server}}/{{tool}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "yAxes": [
          {"label": "Calls/sec", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 2,
        "title": "MCP Tool Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(mcp_tool_calls_total{outcome=\"success\"}[5m])) / sum(rate(mcp_tool_calls_total[5m])) * 100",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        }
      },
      {
        "id": 3,
        "title": "MCP Tool Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum by (server, tool, le) (rate(mcp_tool_duration_seconds_bucket[5m])))",
            "legendFormat": "95th percentile - {{server}}/{{tool}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.50, sum by (server, tool, le) (rate(mcp_tool_duration_seconds_bucket[5m])))",
            "legendFormat": "50th percentile - {{server}}/{{tool}}",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 8},
        "yAxes": [
          {"label": "Duration (s)", "min": 0},
          {"show": false}
        ]
      },
      {
        "id": 4,
        "title": "Observability Services Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"prometheus|otel-collector|jaeger|tempo|pyroscope\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DOWN", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "UP", "color": "green"}}, "type": "value"}
            ]
          }
        }
      },
      {
        "id": 5,
        "title": "MCP Servers Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=~\"mcp-.*\"}",
            "legendFormat": "{{job}}",
            "refId": "A"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"options": {"0": {"text": "DOWN", "color": "red"}}, "type": "value"},
              {"options": {"1": {"text": "UP", "color": "green"}}, "type": "value"}
            ]
          }
        }
      },
      {
        "id": 6,
        "title": "OTLP Collector Metrics",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(otelcol_receiver_accepted_spans_total[5m])",
            "legendFormat": "Spans Received",
            "refId": "A"
          },
          {
            "expr": "rate(otelcol_exporter_sent_spans_total[5m])",
            "legendFormat": "Spans Exported",
            "refId": "B"
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 24},
        "yAxes": [
          {"label": "Spans/sec", "min": 0},
          {"show": false}
        ]
      }
    ]
  }
}