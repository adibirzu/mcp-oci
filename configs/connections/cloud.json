{
    "name": "MCP-OCI Cloud Production",
    "description": "Cloud production configuration for MCP-OCI servers",
    "environment": "production",
    "version": "1.0.0",
    "deployment": {
        "type": "compute",
        "region": "eu-frankfurt-1",
        "compartment_id": "${COMPARTMENT_ID}",
        "instance_id": "${INSTANCE_ID}",
        "public_ip": "${PUBLIC_IP}"
    },
    "connections": {
        "streamable_http": {
            "compute": {
                "url": "https://${PUBLIC_IP}:7001",
                "name": "OCI Compute Server",
                "tls": true,
                "capabilities": ["instance-management", "shape-management", "image-management"]
            },
            "database": {
                "url": "https://${PUBLIC_IP}:7002",
                "name": "OCI Database Server",
                "tls": true,
                "capabilities": ["autonomous-db", "mysql", "nosql"]
            },
            "network": {
                "url": "https://${PUBLIC_IP}:7003",
                "name": "OCI Network Server",
                "tls": true,
                "capabilities": ["vcn", "subnet", "security-groups", "load-balancer"]
            },
            "iam": {
                "url": "https://${PUBLIC_IP}:7004",
                "name": "OCI IAM Server",
                "tls": true,
                "capabilities": ["users", "groups", "policies", "compartments"]
            },
            "observability": {
                "url": "https://${PUBLIC_IP}:7005",
                "name": "OCI Observability Server",
                "tls": true,
                "capabilities": ["monitoring", "logging", "events", "alarms"]
            },
            "resource": {
                "url": "https://${PUBLIC_IP}:7006",
                "name": "OCI Resource Manager Server",
                "tls": true,
                "capabilities": ["stacks", "jobs", "terraform"]
            },
            "cost": {
                "url": "https://${PUBLIC_IP}:7007",
                "name": "OCI Cost Management Server",
                "tls": true,
                "capabilities": ["usage", "budgets", "cost-analysis"]
            },
            "identity": {
                "url": "https://${PUBLIC_IP}:7008",
                "name": "OCI Identity Server",
                "tls": true,
                "capabilities": ["domains", "authentication", "federation"]
            },
            "oneagent": {
                "url": "https://${PUBLIC_IP}:7009",
                "name": "OCI OneAgent Server",
                "tls": true,
                "capabilities": ["agent-management", "monitoring-agent"]
            },
            "logging": {
                "url": "https://${PUBLIC_IP}:7010",
                "name": "OCI Logging Server",
                "tls": true,
                "capabilities": ["log-groups", "log-search", "log-analytics"]
            },
            "enhanced": {
                "url": "https://${PUBLIC_IP}:7011",
                "name": "OCI Enhanced Server",
                "tls": true,
                "capabilities": ["ai-services", "data-science", "analytics"]
            },
            "main": {
                "url": "https://${PUBLIC_IP}:8000",
                "name": "Main Orchestrator",
                "tls": true,
                "capabilities": ["orchestration", "health-check", "metrics"]
            }
        },
        "websocket": {
            "url": "wss://${PUBLIC_IP}:9000",
            "name": "WebSocket Connection",
            "tls": true,
            "capabilities": ["real-time", "bidirectional", "events"]
        },
        "grpc": {
            "url": "${PUBLIC_IP}:50051",
            "name": "gRPC Connection",
            "tls": true,
            "capabilities": ["high-performance", "streaming", "service-mesh"]
        }
    },
    "authentication": {
        "type": "instance_principal",
        "description": "OCI Instance Principal authentication",
        "fallback": "api_key"
    },
    "security": {
        "tls": {
            "enabled": true,
            "verify": true,
            "cert_path": "/etc/ssl/certs/mcp-oci.crt",
            "key_path": "/etc/ssl/private/mcp-oci.key"
        },
        "firewall": {
            "enabled": true,
            "allowed_cidrs": ["0.0.0.0/0"],
            "rate_limiting": {
                "enabled": true,
                "requests_per_minute": 1000
            }
        }
    },
    "monitoring": {
        "metrics": "https://${PUBLIC_IP}:9090/metrics",
        "health": "https://${PUBLIC_IP}:8000/health",
        "ready": "https://${PUBLIC_IP}:8000/ready",
        "apm": {
            "enabled": true,
            "provider": "oci-apm",
            "endpoint": "https://apm.${REGION}.oci.oraclecloud.com"
        }
    },
    "logging": {
        "level": "INFO",
        "output": "oci-logging",
        "format": "json",
        "oci_logging": {
            "log_group_id": "${LOG_GROUP_ID}",
            "log_id": "${LOG_ID}"
        }
    },
    "performance": {
        "max_connections": 1000,
        "timeout_seconds": 60,
        "retry_count": 5,
        "retry_delay_ms": 2000,
        "circuit_breaker": {
            "enabled": true,
            "failure_threshold": 5,
            "recovery_timeout": 30000
        }
    },
    "scaling": {
        "auto_scaling": true,
        "min_instances": 2,
        "max_instances": 10,
        "target_cpu_utilization": 70,
        "target_memory_utilization": 80
    }
}