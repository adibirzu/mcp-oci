{
    "mcpServers": {
        "mcp-oci-compute": {
            "command": "python",
            "args": [
                "-m",
                "mcp_servers.compute"
            ],
            "env": {
                "MCP_TRANSPORT": "stdio",
                "OCI_CLI_AUTH": "api_key",
                "OCI_CONFIG_FILE": "~/.oci/config",
                "OCI_CONFIG_PROFILE": "DEFAULT"
            }
        },
        "mcp-oci-database": {
            "command": "python",
            "args": [
                "-m",
                "mcp_servers.database"
            ],
            "env": {
                "MCP_TRANSPORT": "stdio",
                "OCI_CLI_AUTH": "api_key",
                "OCI_CONFIG_FILE": "~/.oci/config",
                "OCI_CONFIG_PROFILE": "DEFAULT"
            }
        },
        "mcp-oci-network": {
            "command": "python",
            "args": [
                "-m",
                "mcp_servers.network"
            ],
            "env": {
                "MCP_TRANSPORT": "stdio",
                "OCI_CLI_AUTH": "api_key",
                "OCI_CONFIG_FILE": "~/.oci/config",
                "OCI_CONFIG_PROFILE": "DEFAULT"
            }
        },
        "mcp-oci-cost": {
            "command": "python",
            "args": [
                "-m",
                "mcp_servers.cost"
            ],
            "env": {
                "MCP_TRANSPORT": "stdio",
                "OCI_CLI_AUTH": "api_key",
                "OCI_CONFIG_FILE": "~/.oci/config",
                "OCI_CONFIG_PROFILE": "DEFAULT"
            }
        },
        "mcp-oci-observability": {
            "command": "python",
            "args": [
                "-m",
                "mcp_servers.observability"
            ],
            "env": {
                "MCP_TRANSPORT": "stdio",
                "OCI_CLI_AUTH": "api_key",
                "OCI_CONFIG_FILE": "~/.oci/config",
                "OCI_CONFIG_PROFILE": "DEFAULT"
            }
        },
        "mcp-oci-inventory": {
            "command": "python",
            "args": [
                "-m",
                "mcp_servers.inventory"
            ],
            "env": {
                "MCP_TRANSPORT": "stdio",
                "OCI_CLI_AUTH": "api_key",
                "OCI_CONFIG_FILE": "~/.oci/config",
                "OCI_CONFIG_PROFILE": "DEFAULT"
            }
        },
        "mcp-oci-streamable-local": {
            "transport": {
                "type": "sse",
                "baseUrl": "http://localhost:8000"
            }
        },
        "mcp-oci-streamable-cloud": {
            "transport": {
                "type": "sse",
                "baseUrl": "http://<PUBLIC_IP_OR_HOST>:8000"
            }
        }
    }
}
